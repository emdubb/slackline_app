<h1>User Profile</h1>

<%= @user.name %>
<%= @user.location %>
<%= @user.skill %>

<h3>Mah Lines</h3>
<table>
<% @user.lines.each do |l| %>
  <tr>
  <td><%= l.brand %></td>
  <td><%= l.length %>'</td>
  <td><%= l.width %>"</td>
  <td><%= l.style %> Line</td>
  <td><%= l.system %></td>
  <td>
  <% if l.is_active_line? %>
    <strong>Currently up!</strong>
  <% end %>
  </td>
  </tr>
<% end %>
</table>
